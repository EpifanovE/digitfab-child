{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "custom": {
      "accent-color": "#eb4d4b"
    },
    "typography": {
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Roboto Condensed",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/RobotoCondensed-Regular.ttf"
              ]
            },
            {
              "fontFamily": "Roboto Condensed",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/RobotoCondensed-Italic.ttf"
              ]
            },
            {
              "fontFamily": "Roboto Condensed",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/RobotoCondensed-Bold.ttf"
              ]
            },
            {
              "fontFamily": "Roboto Condensed",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/RobotoCondensed-BoldItalic.ttf"
              ]
            }
          ],
          "fontFamily": "\"Roboto Condensed\", sans-serif",
          "name": "Title (Roboto Condensed)",
          "slug": "title"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Open Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/OpenSans-Regular.ttf"
              ]
            },
            {
              "fontFamily": "Open Sans",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/OpenSans-Italic.ttf"
              ]
            },
            {
              "fontFamily": "Open Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/OpenSans-Bold.ttf"
              ]
            },
            {
              "fontFamily": "Open Sans",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/OpenSans-BoldItalic.ttf"
              ]
            }
          ],
          "fontFamily": "\"Open Sans\", sans-serif",
          "name": "Main (Open Sans)",
          "slug": "main"
        }
      ],
      "fontSizes": [
        {
          "size": "0.75rem",
          "slug": "0.75"
        },
        {
          "size": "1rem",
          "slug": "1"
        },
        {
          "size": "1.25rem",
          "slug": "1.25"
        },
        {
          "size": "1.5rem",
          "slug": "1.5"
        },
        {
          "size": "2rem",
          "slug": "2"
        },
        {
          "size": "3rem",
          "slug": "3"
        },
        {
          "size": "4rem",
          "slug": "4"
        }
      ]
    }
  },
  "styles": {
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--title)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--main)",
      "lineHeight": "1.5"
    }
  }
}